<div class="row">
  <div class ="col offset-s1">
<h1><%=@proyecto.nombre%></h1>
</div>
</div>
<div class="container">
<div class="row">
  <div class="col s12 m12 l6">
    <%=image_tag @proyecto.imagen.url, class: "responsive-img", style:"length: 500px; border-style:solid; border-width:3px; border-color:#e0e0e0;" if @proyecto.imagen?%>

  </div>
  <div style="text-align: justify; font-size: 30px;">
    <p class="flow-text" ><%=simple_format(@proyecto.descripcion)%><p>
  </div>

  <br>
  <div class ="col s12">
    <h2>Contactos</h2>
  <p class="flow-text">  <%=simple_format(@proyecto.contactos)%> <p>
</div>
</div>
<h1>Comentarios</h1>
<%  @comentario = Comentario.new %>

<div class="row">
  <div class="col s12 m12 l9">
  <ul class="collapsible">
    <li>
      <div class="collapsible-header">Haz click y agrega un comentario</div>
      <div class="collapsible-body">
        <%= form_for @comentario, url: comentario_path do |f| %>
        <div class="row">
          <div class="col s5">
              <h5>Nombre o Matr√≠cula: </h5>
                </div>
                <div class="col offset-s1 s6">
              <%= f.text_field :matricula, class: 'form-control' , style: 'height: 50px; font-size:30px;'%>
        </div>
        </div>
        <div class="row">
          <div class="col s12">
              <h3> Comentario </h3>
            </div>
              <div class="col s12">
              <%= f.text_area :comentario, size: "10x12"%>
            </div>
            </div>

              <%= f.hidden_field :proyecto_id, value: @proyecto.id %>

              <%= f.submit "Post", class: "btn btn-primary" %>
        <% end %>
      </div>
    </li>
  </ul>
</div>
</div>

        <script>
              document.addEventListener('DOMContentLoaded', function() {
          var elems = document.querySelectorAll('.collapsible');
          var instances = M.Collapsible.init(elems, {});
        });
        </script>
<br>
<hr>
<br>


<%@comentarios.each do |comentario|%>
<div class="row">
  <div class="col s12">
  <h2><%=comentario.matricula%></h2>
</div>
  <div class="col offset-s1 s8">
  <%=comentario.comentario%>
  <br>
</div>
</div>

<%end%>

</div>
