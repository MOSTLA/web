<h1> Gadgets rentados </h1>
<div>
  <table class="striped">
        <thead>
          <tr>
              <th>Nombre</th>
              <th>Imagen</th>
              <th>Propietario</th>
              <th>Precio</th>
              <th>Nombre de quien lo pidi√≥</th>
              <th>Fecha pedido</th>

          </tr>
        </thead>

        <tbody>

          <%@articulos.each do|articulo|%>
          <tr>
            <td><h4><%=articulo.nombre%></h4></td>
            <td><%=image_tag articulo.imagen.url, class: "responsive-img" if articulo.imagen?%></td>
            <td><%=articulo.propietario%></td>
            <td><%=" "+articulo.precio.to_s+"$ "%></td>
            <td><%=articulo.ultimoPedido%></td>
            <td> <%=articulo.fechaPedido.strftime("El %d/%m/%Y a las %r") if articulo.fechaPedido != nil%></td>
            <td><%=link_to "Habilitar", '/admin/negar/'+articulo.id.to_s(), class: "waves-effect waves-light brown darken-3 btn-large"%></td>
            </tr>
          <%end%>
      </tbody>
    </table>

</div>
