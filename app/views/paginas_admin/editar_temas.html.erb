
<div class= "row">
  <div class= "col s12 m9 l7 offset-m1 offset-l2">
<ul class="collection">


  <%  @tema = Tema.new %>
  <li class="collection-item">
  <%= form_for @tema, url: tema_path do |f| %>
        <h3> Nuevo tema: </h3>
        <div class="row">
          <div class="col offset-s1">

        <h4> Nombre: </h4>
        <%= f.text_field :nombre, class: 'form-control', style: 'font-size: 30px' %>
      </div>
    </div>

        <%= f.submit "Crear tendencia", class: "btn btn-primary" %>
  <% end %>
  </li>

  <%@temas.each do |tema|%>
  <li class="collection-item">
    <%= form_for tema, url: tema_path+"/"+tema.id.to_s() do |f| %>

          <%= f.text_field :nombre, class: 'form-control', style: 'height: 70px; font-size: 50px' %>
          <br>

          <%= f.submit "cambiar nombre", class: "btn btn-primary" %>

    <% end %>
    <br>
    <%=link_to "Editar presentación", '/admin/tema/'+tema.id.to_s(), class: "btn btn-primary"%>
    <%=link_to "Ver presentación", '/presentacion/'+tema.nombre, class: "btn btn-primary"%>

    <%= link_to "delete", tema_path+"/"+tema.id.to_s(), method: :delete, class: "btn btn-primary",
                                  data: { confirm: "You are about to delete "+tema.nombre+" and all of its elements, are you sure?" } %>
  </li>
  <%end%>
</ul>
</div>
</div>
